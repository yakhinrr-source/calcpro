<div class="container">

  <!-- Калькулятор 1: Реальная доходность вклада -->
  <div class="calc-card">
    <div class="calc-title">Реальная доходность вклада</div>
    <div class="input-group">
      <label>Сумма вклада (₽)</label>
      <input type="number" id="sum1" value="100000" min="1000">
    </div>
    <div class="input-group">
      <label>Ставка по вкладу (% годовых)</label>
      <input type="number" id="rate1" value="12" step="0.1">
    </div>
    <div class="input-group">
      <label>Инфляция за год (%)</label>
      <input type="number" id="infl1" value="7" step="0.1">
    </div>
    <button onclick="calc1()">Рассчитать</button>
    <div class="result" id="result1">Результат появится здесь</div>
  </div>

  <!-- Калькулятор 2: Потери от девальвации -->
  <div class="calc-card">
    <div class="calc-title">Потери от девальвации рубля</div>
    <div class="input-group">
      <label>Сумма в рублях сейчас</label>
      <input type="number" id="sum2" value="500000" min="1000">
    </div>
    <div class="input-group">
      <label>Ожидаемая девальвация за год (%)</label>
      <input type="number" id="dev2" value="15" step="0.1">
    </div>
    <button onclick="calc2()">Рассчитать</button>
    <div class="result" id="result2">Результат появится здесь</div>
  </div>

  <!-- Калькулятор 3: Реальная стоимость зарплаты -->
  <div class="calc-card">
    <div class="calc-title">Реальная стоимость твоей зарплаты</div>
    <div class="input-group">
      <label>Текущая зарплата (₽ в месяц)</label>
      <input type="number" id="salary3" value="80000">
    </div>
    <div class="input-group">
      <label>Инфляция за год (%)</label>
      <input type="number" id="infl3" value="8" step="0.1">
    </div>
    <button onclick="calc3()">Рассчитать</button>
