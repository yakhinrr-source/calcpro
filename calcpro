<script>
  // Инициализация Telegram Web App
  window.Telegram.WebApp.ready();
  window.Telegram.WebApp.expand();

  function calc1() {
    const sum = parseFloat(document.getElementById('sum1').value);
    const rate = parseFloat(document.getElementById('rate1').value) / 100;
    const infl = parseFloat(document.getElementById('infl1').value) / 100;
    const profit = sum * rate;
    const realProfit = profit - (sum * infl);
    const realRate = (realProfit / sum) * 100;
    document.getElementById('result1').innerHTML = 
      `Через год: ${Math.round(profit).toLocaleString()} ₽ дохода<br>` +
      `Реальная доходность: ${realRate.toFixed(2)}% (с учётом инфляции)`;
  }

  function calc2() {
    const sum = parseFloat(document.getElementById('sum2').value);
    const dev = parseFloat(document.getElementById('dev2').value) / 100;
    const loss = sum * dev;
    document.getElementById('result2').innerHTML = 
      `Потери в валюте: ${Math.round(loss).toLocaleString()} ₽<br>` +
      `Остаток покупательной способности: ${Math.round(sum * (1 - dev)).toLocaleString()} ₽`;
  }

  function calc3() {
    const salary = parseFloat(document.getElementById('salary3').value);
    const infl = parseFloat(document.getElementById('infl3').value) / 100;
    const realSalary = salary * (1 - infl);
    document.getElementById('result3').innerHTML = 
      `Через год реальная зарплата: ${Math.round(realSalary).toLocaleString()} ₽<br>` +
      `Потеря покупательной способности: ${Math.round(salary * infl).toLocaleString()} ₽`;
  }
</script>

